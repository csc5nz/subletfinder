<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.subletfinder.MainActivity">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/floatingActionButton2"
        android:layout_alignLeft="@+id/floatingActionButton2"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="startAddNewSublet"
        app:backgroundTint="@color/colorAccent"
        app:srcCompat="@drawable/ic_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="startSettings"
        app:backgroundTint="@color/colorAccent"
        app:srcCompat="@android:drawable/ic_menu_preferences" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/floatingActionButton3"
        android:layout_alignLeft="@+id/floatingActionButton3"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="startBuildings"
        app:backgroundTint="@color/colorAccent"
        app:srcCompat="@android:drawable/ic_menu_search" />



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/rvToDo"
        >


    </android.support.v7.widget.RecyclerView>


</RelativeLayout>



